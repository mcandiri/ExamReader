@page "/"
@inject NavigationManager Navigation

<PageTitle>ExamReader - Automated Exam Grading</PageTitle>

<div class="hero">
    <h1>ExamReader</h1>
    <p>
        Automated optical mark recognition and exam grading.
        Upload bubble sheets, get instant results with detailed analytics,
        question difficulty analysis, and exportable reports.
    </p>
    <div class="btn-group">
        <a href="/demo" class="btn btn-primary btn-lg">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="5 3 19 12 5 21 5 3" />
            </svg>
            Try Demo
        </a>
        <a href="/exam-setup" class="btn btn-lg">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                <polyline points="17 8 12 3 7 8" />
                <line x1="12" y1="3" x2="12" y2="15" />
            </svg>
            Upload Exam
        </a>
    </div>
</div>

<div class="features">
    <div class="feature-card">
        <div class="feature-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" />
                <circle cx="8.5" cy="8.5" r="1.5" />
                <circle cx="15.5" cy="8.5" r="1.5" />
                <circle cx="8.5" cy="15.5" r="1.5" />
                <circle cx="15.5" cy="15.5" r="1.5" />
            </svg>
        </div>
        <h3>Bubble Sheet Recognition</h3>
        <p>Automatically detect and read bubble sheet answers from scanned images using OCR technology.</p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="20" x2="18" y2="10" />
                <line x1="12" y1="20" x2="12" y2="4" />
                <line x1="6" y1="20" x2="6" y2="14" />
            </svg>
        </div>
        <h3>Detailed Analytics</h3>
        <p>Score distributions, question difficulty indices, discrimination analysis, and grade breakdowns.</p>
    </div>

    <div class="feature-card">
        <div class="feature-icon">
            <svg viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
